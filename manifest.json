{
  "manifest_version": 3,
  "name": "Mailman Moderator",
  "version": "1.0",
  "description": "Help moderating Mailman based mailing list",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": { 
      "service_worker": "background.js"
  },
  "permissions": [ "contextMenus", "tabs" ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
